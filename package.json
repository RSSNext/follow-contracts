{
    "name": "follow-contracts",
    "license": "MIT",
    "version": "2.1.1",
    "repository": "https://github.com/RSSNext/follow-contracts.git",
    "devDependencies": {
        "husky": "^8.0.3",
        "lint-staged": "^14.0.0",
        "solhint": "^5.0.3"
    },
    "scripts": {
        "setup": "make clean && make build",
        "sync": "make install",
        "test": "make foundry-test",
        "snapshot": "make snapshot",
        "lint": "make lint",
        "abi": "make abi",
        "solhint": "make solhint",
        "upgradeable": "make upgradeable",
